<h1>Books</h1>


<table>
  <tbody>
    <% @books.each do |book| %>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

      <td><%= link_to 'Show', show_book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', bookers_path %></td>
      <td></td>

    </tr>

    <% end %>
  </tbody>


</table>

<h2>New Book</h2>

<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<br>
<%= f.submit 'Create Book' %>

<% end %>