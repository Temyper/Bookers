<h1>Editing Book</h1>

<%= form_with model:@book,url:"/bookers/#{@book.id}" , local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<br>
<%= f.submit 'Update Book' %>

<% end %>

<%= link_to 'Show',show_book_path %> | <%= link_to 'Back',bookers_path %>